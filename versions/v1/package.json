{
  "name": "v1",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "hono": "^4.8.2",
      "@trpc/server": "^11.7.2",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22",
      "@trpc/client": "^11.7.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "check-types": "bun run --filter '*' check-types",
    "dev:native": "bun run --filter native dev",
    "dev:web": "bun run --filter web dev",
    "dev:server": "bun run --filter server dev",
    "db:push": "bun run --filter @v1/db db:push",
    "db:studio": "bun run --filter @v1/db db:studio",
    "db:generate": "bun run --filter @v1/db db:generate",
    "db:migrate": "bun run --filter @v1/db db:migrate",
    "db:local": "bun run --filter @v1/db db:local"
  },
  "dependencies": {
    "@v1/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "@v1/config": "workspace:*",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.5"
}
